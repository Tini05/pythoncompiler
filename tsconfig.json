{
  "compilerOptions": {
      "jsx": "react-jsx", // For React 17+
      "moduleResolution": "node",
      "module": "ESNext",  // or "ES2020" or "ES2022"
      "target": "ESNext",  // optional but recommended
      "lib": ["ES2015", "DOM"],  // Add ES2015 (or higher) to the lib array
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
  } 
   
  ,  
  "include": [
    "src/**/*"
  ]
}

